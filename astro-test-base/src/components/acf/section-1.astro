---
export async function HomeACF() {
  const HomeACF = await fetch(import.meta.env.WORDPRESS_API_URL, {
    method: "post",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      query: `{
                page(id: "2", idType: DATABASE_ID) {
    home {
      text
      title
      image {
        sourceUrl
      }
    }
  }
            }
            `,
    }),
  });
  const { data } = await HomeACF.json();

  return data;
}

const data = await HomeACF();

const section1 = data.page.home;
---

<div class="section-1 box">
  <h2>Section 1</h2>
  <h2>{section1.title}</h2>
  <img src={section1.image.sourceUrl} alt={section1.image.title} />
  <p>{section1.text}</p>
</div>


